<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/cvLH"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginVertical="@dimen/cvMarginVertical"
    android:layout_marginHorizontal="@dimen/cvMarginhorizontal"
    app:cardCornerRadius="@dimen/cvCornerRadius"
    app:cardElevation="@dimen/cwCardElevation">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iwCharacter"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/tvCharacterName"
            android:layout_width="@dimen/tvlayoutWidthCW"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/tvMarginLeftCV"
            android:layout_marginTop="@dimen/tvLayoutMarginTop"
            tools:text="hola"
            android:textSize="30sp"
            android:textColor="@color/black" />

    </FrameLayout>


</androidx.cardview.widget.CardView>